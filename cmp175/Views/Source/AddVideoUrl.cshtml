@model cmp175.Models.VideoURL
@{
    ViewData["Title"] = "Add Product";
}

<h2>Add VideoURl</h2>

<form asp-action="AddVideoUrl" method="post" >
    <div class="form-group">
        <label asp-for="videoURL"></label>
        <input asp-for="videoURL" class="form-control" />
        <span asp-validation-for="videoURL" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
       <div class="form-group">
             <label asp-for="SourceId" class="control-label"></label>
             <select asp-for="SourceId" class="form-control" asp-items="@ViewBag.SourceIdList"></select>
             <span asp-validation-for="SourceId" class="text-danger"></span>
         </div>
    <button class="btn btn-primary" type="submit" class="btn btn-primary">Add</button>
</form>